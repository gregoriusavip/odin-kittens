<%= render "flash" %>
<h1> <%= @kitten.name %> </h1>
<ul>
    <li><%= "Age: #{ @kitten.age }" %></li>
    <li><%= "Cuteness: #{ @kitten.cuteness }" %></li>
    <li><%= "Softness: #{ @kitten.softness }" %></li>
</ul>
<div style="display: inline-grid; grid-template-columns: auto auto auto; grid-gap: 1rem;">
    <%= button_to "Edit #{ @kitten.name }", edit_kitten_path(@kitten), { :method => :get } %>
    <%= button_to "Delete", @kitten, method: :delete, data: { turbo_confirm: "Are you sure?" } %>
    <%= button_to "Home", kittens_path, { :method => :get } %>
</div>